<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/rangeIndicator"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:background="@color/unselected_plot_color"/>

    <FrameLayout
        android:id="@+id/selectedRangeIndicator"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_gravity="center_vertical"
        android:background="@color/selected_range_indicator_color"/>

    <com.makhrov.filteringview.DragCircle
        android:id="@+id/firstCircle"
        style="@style/RangePickerCircle"
        android:layout_gravity="left"
        app:circleState="left"/>

    <com.makhrov.filteringview.DragCircle
        android:id="@+id/secondCircle"
        style="@style/RangePickerCircle"
        android:layout_gravity="right"
        app:circleState="right"/>
</FrameLayout>